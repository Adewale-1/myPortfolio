<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="800" height="480" xmlns="http://www.w3.org/2000/svg">
  <!-- Background and Title -->
  <rect width="800" height="480" fill="#f8f9fa" rx="10" ry="10"/>
  <text x="400" y="40" font-family="Arial" font-size="24" text-anchor="middle" font-weight="bold" fill="#333">Sentiment Analysis NLP Architecture</text>
  
  <!-- Input Layer -->
  <rect x="50" y="80" width="700" height="60" fill="#e3f2fd" stroke="#2196f3" stroke-width="2" rx="8" ry="8"/>
  <text x="400" y="115" font-family="Arial" font-size="16" text-anchor="middle" fill="#333">Input Text: "This movie was absolutely fantastic and entertaining"</text>
  
  <!-- Text Processing -->
  <rect x="50" y="160" width="700" height="60" fill="#e8f5e9" stroke="#4caf50" stroke-width="2" rx="8" ry="8"/>
  <text x="400" y="185" font-family="Arial" font-size="16" text-anchor="middle" font-weight="bold" fill="#333">Text Processing</text>
  <text x="400" y="205" font-family="Arial" font-size="14" text-anchor="middle" fill="#333">Tokenization | Stop Word Removal | TF-IDF Weighting | Frequency Thresholding</text>
  
  <!-- Model Layer - Split into two paths -->
  <line x1="400" y1="220" x2="400" y2="240" stroke="#333" stroke-width="2"/>
  <line x1="400" y1="240" x2="200" y2="240" stroke="#333" stroke-width="2"/>
  <line x1="400" y1="240" x2="600" y2="240" stroke="#333" stroke-width="2"/>
  <line x1="200" y1="240" x2="200" y2="260" stroke="#333" stroke-width="2"/>
  <line x1="600" y1="240" x2="600" y2="260" stroke="#333" stroke-width="2"/>
  
  <!-- Logistic Regression Path -->
  <rect x="50" y="260" width="300" height="80" fill="#fff3e0" stroke="#ff9800" stroke-width="2" rx="8" ry="8"/>
  <text x="200" y="290" font-family="Arial" font-size="16" text-anchor="middle" font-weight="bold" fill="#333">Logistic Regression Model</text>
  <text x="200" y="320" font-family="Arial" font-size="14" text-anchor="middle" fill="#333">Unigram and Bigram Features</text>
  
  <!-- Deep Averaging Network Path -->
  <rect x="450" y="260" width="300" height="120" fill="#e8eaf6" stroke="#3f51b5" stroke-width="2" rx="8" ry="8"/>
  <text x="600" y="290" font-family="Arial" font-size="16" text-anchor="middle" font-weight="bold" fill="#333">Deep Averaging Network (DAN)</text>
  <rect x="475" y="300" width="250" height="30" fill="#c5cae9" stroke="#3f51b5" stroke-width="1" rx="4" ry="4"/>
  <text x="600" y="320" font-family="Arial" font-size="14" text-anchor="middle" fill="#333">Word Embedding Layer (GloVe)</text>
  <rect x="475" y="340" width="250" height="30" fill="#c5cae9" stroke="#3f51b5" stroke-width="1" rx="4" ry="4"/>
  <text x="600" y="360" font-family="Arial" font-size="14" text-anchor="middle" fill="#333">Feed-Forward Layers with ReLU</text>
  
  <!-- Output Lines -->
  <line x1="200" y1="340" x2="200" y2="380" stroke="#333" stroke-width="2"/>
  <line x1="600" y1="380" x2="600" y2="400" stroke="#333" stroke-width="2"/>
  <line x1="200" y1="380" x2="400" y2="380" stroke="#333" stroke-width="2"/>
  <line x1="600" y1="380" x2="400" y2="380" stroke="#333" stroke-width="2"/>
  <line x1="400" y1="380" x2="400" y2="400" stroke="#333" stroke-width="2"/>
  
  <!-- Output Layer -->
  <rect x="200" y="400" width="400" height="50" fill="#fce4ec" stroke="#e91e63" stroke-width="2" rx="8" ry="8"/>
  <text x="400" y="430" font-family="Arial" font-size="18" text-anchor="middle" font-weight="bold" fill="#333">Sentiment Classification: Positive or Negative</text>
  
  <!-- Performance Metrics -->
  <text x="120" y="360" font-family="Arial" font-size="12" text-anchor="middle" fill="#555">Accuracy: 80.62%</text>
  <text x="680" y="400" font-family="Arial" font-size="12" text-anchor="middle" fill="#555">Accuracy: 78.53%</text>
</svg> 